extend layout
block content
    div(id='container')
        video(id='video-el', width='400', height='300', preload='auto', loop)
        audio#myAudio(autoplay="autoplay" src="TheStory_01.mp3" type="audio/mpeg")
        canvas(id='overlay', width='400', height='300')
    canvas(id='sketch', width='400', height='300')
    div(id='emotion-container')
        div(id='emotion-icons')
            img.emotion-icon(id='icon1', src='/images/angry.png')
            img.emotion-icon(id='icon2', src='/images/sad.png')
            img.emotion-icon(id='icon3', src='/images/surprised.png')
            img.emotion-icon(id='icon4', src='/images/happy.png')
        div(id='emotion-chart')
    div(id='controls')
        input.btn(id='start-button', type='button', value='wait, loading video', disabled='disabled')
