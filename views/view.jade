extend layout
block content
    div.score.hide.
        0.000
    div.panel.panel-story
        div.back.hide
            a(href='#{backLink}').
                ‚Üê
        div.text.text-story.hide.
            Allow your camera to be used to begin acting.
        p.phrase.hide
        div.media
            div.feedback.hide
            div.face.hide
            audio(id='audio-src', src='', type='audio/mpeg')
            video.media-video(id='video-el', width='400', height='300', preload='auto', loop)
            canvas.media-canvas(id='overlay', width='400', height='300')
        canvas.hidden-canvas(id='sketch', width='400', height='300')
        div.controls
            input.hide.btn(id='proceed-button', type='button', value='loading...', disabled='disabled')
block scripts
    include vendor-scripts
    script(type='text/javascript', src='/js/src/client-sockets.js')
    script(type='text/javascript', src='/js/src/data/#{storyData}.js')
